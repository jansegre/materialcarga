# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /about                                  Application.about
GET     /search                                 Application.search
GET     /password                               Application.password
POST    /password                               Application.changePassword
GET     /cat/{slug}                             Application.cat
GET     /material/add                           Application.add
POST    /material/add                           Application.addInventario
POST    /material/{id}/label                    Application.addLabel
DELETE  /material/{id}/delete                   Application.delete
GET     /material/{id}/unload                   Application.unload
GET     /material/{id}/edit                     Application.edit
POST    /material/edit                          Application.editInventario
GET     /material/{id}/transfer                 Application.transfer


# Adminstration
*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the / path
GET     /public/                                staticDir:public

# Catch all
# *       /{action}/?                             Application.{action}
# *       /{controller}/{action}/?                {controller}.{action}
