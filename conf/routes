# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /about                                  Application.about
GET     /search                                 Application.search
GET     /password                               Application.password
POST    /password                               Application.changePassword
GET     /cat/{slug}                             Application.cat
POST    /material/label/{id}                    Application.addLabel
DELETE  /material/delete/{id}                   Application.delete
GET     /material/unload/{id}                   Application.unload
GET     /material/save                          Application.add
GET     /material/{id}                          Application.edit
POST    /material/save                          Application.editInventario
PUT     /material/save                          Application.editInventario
GET     /material/transfer/{id}                 Application.transfer


# Adminstration
*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the / path
GET     /public/                                staticDir:public

# Catch all
# *       /{action}/?                             Application.{action}
# *       /{controller}/{action}/?                {controller}.{action}
